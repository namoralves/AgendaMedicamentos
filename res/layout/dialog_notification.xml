<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/White"
    android:orientation="vertical"
    android:padding="6dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Black" >

        <TextView
            android:id="@+dialog_notification/paciente"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:background="@color/DarkGray"
            android:padding="2dip"
            android:text="Nome do paciente" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="4dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+dialog_notification/img"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:src="@drawable/dose" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical" >

            <TextView
                android:id="@+dialog_notification/data_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|top"
                android:paddingRight="2dip"
                android:paddingTop="2dip"
                android:text="18/03/2013"
                android:textColor="@color/Black"
                android:textSize="14sp" />

            <TextView
                android:id="@+dialog_notification/nome_medicamento"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="Texto"
                android:textColor="@color/DarkRed"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+dialog_notification/btn_tomar"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:layout_weight="1"
            android:background="@xml/button_blue"
            android:drawableLeft="@drawable/tomou_30"
            android:textSize="16sp"
            android:text="Tomar" />

        <Button
            android:id="@+dialog_notification/btn_adiar"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_weight="1"
            android:background="@xml/button_blue"
            android:drawableLeft="@drawable/alarme_30"
            android:textSize="16sp"
            android:text="Adiar" />
    </LinearLayout>

</LinearLayout>