<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dip" >

    <LinearLayout
        android:id="@+cadastre/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+cadastre/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Medicamento"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+cadastre/txtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:ems="10" >
        </EditText>

        <TextView
            android:id="@+cadastre/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Quantidade em Cartela/Frasco"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+cadastre/txtQuantidadeCartelaFrasco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+cadastre/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Período para Tomar (Em Horas)"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+cadastre/txtPeriodoHoras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+cadastre/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Quantidade a Tomar"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <EditText
                android:id="@+cadastre/txtQuantidadeTomar"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:ems="10"
                android:inputType="number" />

            <Spinner
                android:id="@+cadastre/spnMedidaUnidade"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@xml/spinner" />
        </LinearLayout>

        <TextView
            android:id="@+cadastre/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tempo de Uso"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+cadastre/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="De"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+cadastre/btnDataInicial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data Inicial" />

            <TextView
                android:id="@+cadastre/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="2dp"
                android:text=" até "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+cadastre/btnDataFinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data Final" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="100dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="2dip"
            android:background="@color/DarkGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+cadastre/btnCadastrar"
                style="@style/ButtonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@xml/button_blue"
                android:text="Cadastrar"
                android:textSize="20sp" />

            <Button
                android:id="@+cadastre/btnCancelar"
                style="@style/ButtonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@xml/button_blue"
                android:text="Cancelar"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>